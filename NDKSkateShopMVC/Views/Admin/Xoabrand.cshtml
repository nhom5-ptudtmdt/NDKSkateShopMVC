@model NDKSkateShopMVC.Models.Brand

@{
    ViewBag.Title = "Xoabrand";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; padding-top: 23px; font-weight: bold;">XÁC NHẬN XÓA THƯƠNG HIỆU</h2>

<h3>Bạn quyết định xóa thương hiệu này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên thương hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenBrand)
        </dd>

        <dt>
            Xuất xứ:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.XuatXu)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Brand")
        </div>
    }
</div>
