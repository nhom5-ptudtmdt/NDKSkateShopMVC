@model NDKSkateShopMVC.Models.Part

@{
    ViewBag.Title = "Xoapart";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center; padding-top: 23px; font-weight: bold;">XÁC NHẬN XÓA LOẠI SẢN PHẨM</h2>

<h3>Bạn quyết định xóa loại sản phẩm này?</h3>
<div>
    <h4>Part</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenParts)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Part")
        </div>
    }
</div>
