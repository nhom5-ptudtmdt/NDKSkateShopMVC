@using NDKSkateShopMVC.Models
@{
    CommonInfo x = (CommonInfo)HttpContext.Current.Application["dungChung"];
}
<!DOCTYPE html>
<html>
<head>
    <title>Chic - DG Skateshop</title>
    <link href="~/Content/bootstrap.css" rel='stylesheet' type='text/css' />
    <!-- jQuery (Bootstrap's JavaScript plugins) -->
    <script src="~/Scripts/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <link href="~/Content/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- Custom Theme files -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Bike-shop Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <link href='http://fonts.googleapis.com/css?family=Roboto:500,900,100,300,700,400' rel='stylesheet' type='text/css'>
    <!--webfont-->
    <!-- dropdown -->
    <script src="~/Scripts/jquery.easydropdown.js"></script>
    <link href="~/Content/nav.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/Scripts/scripts.js" type="text/javascript"></script>
    <!--js-->
    <!---- start-smoth-scrolling---->
    <script type="text/javascript" src="~/Scripts/move-top.js"></script>
    <script type="text/javascript" src="~/Scripts/easing.js"></script>
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
            });
        });
    </script>
    <!---- start-smoth-scrolling---->


</head>
<body>
    <!--banner-->
    <script src="~/Scripts/responsiveslides.min.js"></script>
    <script>
        $(function () {
            $("#slider").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
                pager: true,
            });
        });
    </script>
    <div class="banner-bg banner-sec">
        <div class="container">
            <div class="header">
                <div class="logo">
                    <a href="https://www.facebook.com/VanTruotChinhHangChatLuongChicDGSkateshop"><img src="Asset/Images/logoskateshop.png" alt="" /></a>
                </div>
                <div class="top-nav">
                    <label class="mobile_menu" for="mobile_menu">
                        <span>Menu</span>
                    </label>
                    <input id="mobile_menu" type="checkbox">
                    <ul class="nav">
                        <li class="dropdown1">
                            @Html.ActionLink("Home", "Index", "Home")
                                                <ul class="dropdown2">
                                                    <li>@Html.ActionLink("Đăng Ký", "Create", "Customers")</li>
                                                </ul>
                                            </li>
                        <li class="dropdown1">
                            @Html.ActionLink("Skateboards", "Index", "Skateboards")
                            <ul class="dropdown2">
                                @foreach (Part i in x.BoPhan)
                                {
                                    <li>@Html.ActionLink(i.TenParts, "Index", "Skateboards")</li>
                                }
                            </ul>
                        </li>
                        <li class="dropdown1">
                            @Html.ActionLink("Liên hệ", "Index", "Accessories")
                        </li>
                        <li class="dropdown1">@Html.ActionLink("Hướng dẫn mua hàng", "Index", "HuongDan")</li>
                        <a class="shop" href="@Url.Action("ShowToCart", "ShoppingCart")"><img src="../Asset/Images/cart.png" alt="" /></a>
                    </ul>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <!--/banner-->
    <div class="parts">
        <div class="container">
            <h2>CHIC - DG SKATESHOP</h2>
            <div class="bike-parts-sec">
                <div class="bike-parts">
                    <div class="top">
                        <ul>
                            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                            <li><a href="#"> / </a></li>
                            <li><a href="@Url.Action("Index", "Skateboards")">Part</a></li>
                        </ul>
                    </div>
                    @RenderBody()
                </div>

                <div class="rsidebar span_1_of_left">
                    <section class="sky-form">
                        <div class="product_right">
                            <h3 class="m_2">SKATE PARTS</h3>
                            @Html.Action("BoPhan", "Skateboards")
                        </div>
                        <div class="product_right">
                            <h3 class="m_2">BRANDS</h3>
                            @Html.Action("ThuongHieu", "Skateboards")
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
    <!---->
    <div class="footer">
        <div class="container wrap">
            <div class="logo2">
                <a href="https://www.facebook.com/VanTruotChinhHangChatLuongChicDGSkateshop"><img src="Asset/Images/logoskateshop.png" alt="" /></a>
            </div>
            <div class="ftr-menu">
                <ul>
                    <li class="dropdown1">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li class="dropdown1">@Html.ActionLink("Skateboards", "Index", "Skateboards")</li>
                    <li class="dropdown1">@Html.ActionLink("Liên hệ", "Index", "Accessories")</li>
                    <li class="dropdown1">@Html.ActionLink("Hướng dẫn mua hàng", "Index", "HuongDan")</li>
                </ul>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!---->

</body>
</html>

